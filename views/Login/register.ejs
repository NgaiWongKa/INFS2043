    <div class="container mt-5 mb-5">
      <div class="row">
        <div class="col-6 d-flex justify-content-center align-items-center bg-white shadow-sm border border-end-0 border-secondary login-image-container">
          <img src="extra_images/login_photo.jpeg" class="login-image">
        </div>

        <div class="col-6 d-flex justify-content-center align-items-center bg-white shadow-sm border border-start-0 border-secondary">
          <div class="text-center">
            <h2 class="fw-bold login-font">CREATE AN ACCOUNT</h1>
            <p class="text-muted login-font">Quickly sign up to easily shop and book a pump!</p>

            <form action="/register" method="post" class="text-start mt-4">
              <div class="mb-3">
                <label for="username" class="form-label fw-bold login-font">Username</label>
                <input type="text" name="username" placeholder="Username" class="form-control login-font" required>
              </div>
              <div class="mb-3">
                <label for="username" class="form-label fw-bold login-font">Password</label>
                <input type="password" name="password" placeholder="Password" class="form-control login-font" required>
              </div>
              <div class="row">
                <div class="col-6">
                  <label for="username" class="form-label fw-bold login-font">Firstname</label>
                  <input type="text" id="firstName" name="firstName" placeholder="First Name" class="form-control login-font" required>
                </div>
                <div class="col-6">
                  <label for="lastName" class="form-label fw-bold login-font">Last Name</label>
                  <input type="text" id="lastName" name="lastName" placeholder="Last Name" class="form-control login-font" required>
                </div>
              </div>
              <div class="mb-3">
                <label for="dob" class="form-label fw-bold login-font">Date of Birth</label>
                <input type="date" id="dob" name="dob" class="form-control login-font" class="form-control login-font" required>
              </div>
              <div class="mb-3">
                <label for="prefFuel" class="form-label fw-bold login-font">Preferred Fuel</label>
                <select id="prefFuel" name="prefFuel" class="form-control login-font" required>
                    <option value="Petrol">Petrol</option>
                    <option value="Diesel">Diesel</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="securityQuestion" class="form-label fw-bold login-font">(Security Question) In what city were you born?</label>
                <input type="text" id="securityQuestion" name="securityQuestion" class="form-control login-font" required>
              </div>
              <div class="d-grid mx-auto col-12 mt-3">
                <button type="submit" class="btn btn-dark login-font">Sign up</a>
              </div>
            </form>
          </div>
        </div>
      </div>
