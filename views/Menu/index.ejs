                    <% } %>
                <a href="/cart" class="btn btn-primary mb-3">View Cart</a>
            </div>

            <div class="row">
                <% menuItems.forEach(item => { %>
                <div class="col-3 mb-4">
                    <div class="card border border-secondary border-opacity-25 rounded">
                        <img id="foodItemImage" src="/food_items/<%= item.image %>" class="card-img-top p-4" alt="<%= item.name %>">
                        <div class="card-body">
                            <div class="d-flex gap-2 justify-content-center align-items-center">
                                <% if (item.promo_percentage > 0) { %>
                                    <p class="card-title fw-bold fs-4">$<%= ((item.price - ((item.promo_percentage / 100) * item.price))).toFixed(2) %></p>
                                    <p class="card-title fs-7 text-muted"><del>$<%= item.price %></del></p>
                                    <span class="badge rounded-pill text-bg-warning"><span class="fw-bold"><%= item.promo_percentage %>%</span> discount!</span>
                                <% } else { %>
                                    <p class="card-title fw-bold fs-4">$<%= item.price %></p>
                                <% } %>
                            </div>
                            <p class="card-text fw-bold fs-5"><%= item.name %></p>
                            <p class="card-text text-muted text-truncate"><%= item.description %></p>
                            <form class="add-to-cart-form" data-id="<%= item._id %>">
                                <div class="input-group">
