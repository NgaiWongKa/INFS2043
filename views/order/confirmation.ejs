<h1>Order Confirmation</h1>

<h2>Order #<%= order._id %></h2>

<ul>
    <% order.items.forEach(function(item) { %>
        <li><%= item.itemName %> - Quantity: <%= item.quantity %></li>
    <% }); %>
</ul>

<p>Total Amount: $<%= order.totalAmount.toFixed(2) %></p>

