<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Orders</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        socket.emit('registerUser', '<%= currentUser._id %>', 'staff'); // Ensure currentUser is available
    </script>
</head>
<body>
    
    <h1>Pending Orders</h1>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Items</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order._id %></td>
                    <td><%= order.user.username %></td>
                    <td>
                        <ul>
                            <% order.items.forEach(item => { %>
                                <li>
                                    <%= item.itemName %> (Quantity: <%= item.quantity %>)
                                </li>
                            <% }) %>
                        </ul>
                    </td>
                    <td><%= order.totalAmount %></td>
                    <td><%= order.status %></td>
                    <td>
                        <form action="/order/ready/<%= order._id %>" method="POST">
                            <button type="submit">Mark as Ready</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>